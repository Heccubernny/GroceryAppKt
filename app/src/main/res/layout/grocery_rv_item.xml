<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:backgroundTint="@color/blue_shade_2"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/idLL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:padding="4dp"
                android:text="Item Name"
                android:textColor="@color/white"
                android:id="@+id/idTVItemName"/>

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:padding="4dp"
                android:id="@+id/idTvQuantity"
                android:textColor="@color/white"
                android:text="Quantity"/>

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:padding="4dp"
                android:id="@+id/idTvRate"
                android:textColor="@color/white"
                android:text="Rate"/>


            <ImageView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:padding="4dp"
                android:layout_margin="3dp"
                android:src="@drawable/ic_delete"
                app:tint="@color/white"
                android:id="@+id/idTVDelete"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@+id/idTVTotalAmt"
            android:layout_below="@id/idLL1"
            android:id="@+id/idTVHeading"
            android:textColor="@color/white"
            android:text="Total Cost"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:layout_below="@id/idLL1"
            android:id="@+id/idTVTotalAmt"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:text="Amt"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
